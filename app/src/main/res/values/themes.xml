<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Regeneration2021" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>

        <item name="android:colorPrimary">@color/purple_500</item>
<!--        <item name="background">@color/purple_700</item>-->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Regeneration2021.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Regeneration2021.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Regeneration2021.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Regeneration2021.TextView">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Theme.Regeneration2021.TextView.RED">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Theme.Regeneration2021.TextView.BLUE">
        <item name="android:textColor">@color/blue</item>
    </style>
</resources>